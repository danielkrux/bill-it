<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title</title>
  @Styles.Render("~/Content/css")
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <script src="https://kit.fontawesome.com/17f893a42e.js" crossorigin="anonymous"></script>
</head>
<body class="d-flex flex-column vh-100">
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <a class="navbar-brand" href="/home">Bill It</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav text-white">
          <li class="mr-2"><a class="text-white" href="@Url.Action("Index", "invoices")">Facturen</a></li>
        </ul>
        <ul class="nav navbar-nav text-white">
          <li class="mr-2"><a class="text-white" href="@Url.Action("Index", "clients")">Klanten</a></li>
        </ul>
        <ul class="nav navbar-nav text-white">
          <li class="mr-2"><a class="text-white" href="@Url.Action("Index", "companies")">Bedrijven</a></li>
        </ul>
      </div>
    </nav>
  </header>
  <main role="main" class="flex-shrink-0">
    <div class="container mt-5">
      @RenderBody()
    </div>
  </main>
  <footer class="footer mt-auto">
    <div class="container">
      <hr />
      <p>&copy; @DateTime.Now.Year - Bill It</p>
    </div>
  </footer>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  @RenderSection("scripts", required: false)
</body>
</html>
