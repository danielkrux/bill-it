@model Bill.Web.UI.ViewModels.InvoiceClientsCompanies

@{
  ViewBag.Title = $"Edit {@Model.Invoice.Code}";
}

<h2>Factuur <strong>@Model.Invoice.Code</strong> Aanpassen</h2>


@using (Html.BeginForm())
{
  @Html.AntiForgeryToken()

<div class="form-horizontal">
  <hr />
  @Html.ValidationSummary(true, "", new { @class = "text-danger" })
  @Html.HiddenFor(model => model.Invoice.ID)

  <div class="form-group">
    <div class="col-md-10">
      @Html.EditorFor(model => model.Invoice.Date, new { htmlAttributes = new { @class = "form-control" } })
      @Html.ValidationMessageFor(model => model.Invoice.Date, "", new { @class = "text-danger" })
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-6">
      @Html.DropDownListFor(m => m.Invoice.ClientID, new SelectList(Model.Clients, "ID", "Email"), "Selecteer klant", new { @class = "form-control" })
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-6">
      @Html.DropDownListFor(m => m.Invoice.CompanyID, new SelectList(Model.Companies, "ID", "Name"), "Selecteer bedrijf", new { @class = "form-control" })
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <input type="submit" value="Save" class="btn btn-default" />
    </div>
  </div>
</div>
}

<div>
  @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
