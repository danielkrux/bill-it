@model IEnumerable<Bill.DataModels.Invoice>

@{
  ViewBag.Title = "Index";
}

<div class="row my-2">
  <h2>Facturen</h2>

  <div class="ml-auto my-auto">
    <a href="invoices/create" class="btn btn-primary">
      <i class="fas fa-plus"></i>
      Nieuwe Factuur
    </a>
  </div>
</div>
<table class="table">
  <tr>
    <th>Datum</th>
    <th>Klant</th>
    <th>Bedrijf</th>
    <th></th>
  </tr>

  @foreach (var item in Model)
  {
<tr>
  <td>
    @Html.DisplayFor(modelItem => item.Date)
  </td>
  <td>
    @Html.DisplayFor(modelItem => item.Client.Email)
  </td>
  <td>
    @Html.DisplayFor(modelItem => item.Company.Name)
  </td>
  <td>
    <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "Invoices", new { id = item.ID})"><i class="fas fa-edit"></i></a>
    <a class="btn btn-sm btn-primary" href="@Url.Action("Details", "Invoices", new { id = item.ID})"><i class="fas fa-info-circle"></i></a>
    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Invoices", new { id = item.ID})"><i class="fas fa-trash"></i></a>
  </td>
</tr>
  }

</table>
